<!-- views/pages/home.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
  </head>
  <body class="container">

  <header>
    <% include ../partials/header %>
  </header>
  <main>
    <div class="row">
      <div id="containner" class="col-sm-12">    
        <div class="jumbotron">
            <select id="produtoSelect">
              <% for(i in produtos) {%>
              <option value="<%= produtos[i].id %>"><%= produtos[i].id%> / <%= produtos[i].nome%> / <%= produtos[i].cor%></option>
              <% } %>
            </select>
            <input type="number" id="qtd" value="0">
            <input type="button" value="+" onclick="add()">
          <form>
            <br>
            <input type="hidden" name="tipo" value="in">
            <table id="produtoList" class="table table-hover">
              <tr>
                <td>Cod</td>
                <td>Produto</td>
                <td>Cor</td>
                <td>Quantidade</td>
              </tr>
            </table>
          </form>
        </div>
      </div>
    </div>
  </main>

  <footer>
  <% include ../partials/footer %>
  </footer>

  </body>
</html>